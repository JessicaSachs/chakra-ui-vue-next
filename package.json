{
  "name": "chakra-ui-vue-next",
  "version": "1.0.0",
  "description": "Vue 3 compatible Chakra UI",
  "main": "index.js",
  "repository": "https://github.com/chakra-ui/chakra-ui-vue-next.git",
  "author": "codebender828 excellence@jbakebwa.dev",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",

    "scaffold": "hygen",
    "playground:routes": "ts-node ./scripts/parse-routes.ts",
    "playground": "yarn playground:routes && vite serve playground",
    "playground:build": "yarn playground:routes && vite build playground",

    "c-alert": "yarn workspace @chakra-ui/c-alert",
    "c-box": "yarn workspace @chakra-ui/c-box",
    "c-button": "yarn workspace @chakra-ui/c-button",
    "nuxt": "yarn workspace @chakra-ui/nuxt-next"
  },
  "license": "MIT",
  "private": true,
  "devDependencies": {
